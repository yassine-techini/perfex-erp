# Perfex ERP - Frontend Environment Variables
# Copy this file to .env and fill in the values

# API Configuration
VITE_API_URL=http://localhost:8787/api/v1

# Application Settings
VITE_APP_NAME=Perfex ERP
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern Enterprise Resource Planning System

# Environment
VITE_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_BETA_FEATURES=false

# Optional: Analytics (Google Analytics, Mixpanel, etc.)
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X
# VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Optional: Error Reporting (Sentry)
# VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Optional: Feature Service (LaunchDarkly, etc.)
# VITE_LAUNCHDARKLY_CLIENT_ID=your-client-id

# Optional: Support/Chat (Intercom, Crisp, etc.)
# VITE_INTERCOM_APP_ID=your-app-id

# Optional: Maps API (for location features)
# VITE_GOOGLE_MAPS_API_KEY=your-api-key

# Debug Settings (development only)
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false
