{
  "name": "perfex-api",
  "version": "0.1.0",
  "private": true,
  "description": "Perfex API Worker (Hono.js on Cloudflare Workers)",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "type-check": "tsc --noEmit",
    "cf-typegen": "wrangler types",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "@perfex/database": "workspace:*",
    "@perfex/shared": "workspace:*",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.37.0",
    "hono": "^4.7.4",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@vitest/coverage-v8": "^4.0.13",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^4.50.0"
  }
}
